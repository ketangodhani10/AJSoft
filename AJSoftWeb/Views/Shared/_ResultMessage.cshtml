@if (TempData["errormsg"] != null)
{
    <script type="text/javascript">
        $('body').showMessage({
            'thisMessage': ['@TempData["errormsg"]'],
            className: 'fail',
            displayNavigation: false,
            location: 'top',
            autoClose: true,
            useEsc: true
        });
    </script>
}
else if (TempData["successmsg"] != null)
{
    <script type="text/javascript">
        $('body').showMessage({
            'thisMessage': ['@TempData["successmsg"]'],
            className: 'success',
            displayNavigation: false,
            location: 'top',
            autoClose: true,
            useEsc: true
        });
    </script>
}
else if (TempData["sysnotificationmsg"] != null)
{
    <script type="text/javascript">
        $('body').showMessage({
            'thisMessage': ['@TempData["sysnotificationmsg"]'],
            className: 'warning',
            displayNavigation: false,
            location: 'top',
            autoClose: true,
            useEsc: true,
            //closeText:'close'
        });
    </script>
}